<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ToggleButton
        android:id="@+id/dp_monday"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:textOff="M"
        android:textOn="M"
        style="@style/toggleButton"
        android:textColor="@drawable/daypicker_toggle_text_color"
        android:background="@drawable/daypicker_toggle_bg" />
    <ToggleButton
        android:id="@+id/dp_tuesday"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="T"
        android:textOn="T"
        style="@style/toggleButton"
        android:textColor="@drawable/daypicker_toggle_text_color"
        android:background="@drawable/daypicker_toggle_bg" />

    <ToggleButton
        android:id="@+id/dp_wednesday"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="W"
        android:textOn="W"
        style="@style/toggleButton"
        android:textColor="@drawable/daypicker_toggle_text_color"
        android:background="@drawable/daypicker_toggle_bg" />

    <ToggleButton
        android:id="@+id/dp_thursday"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="T"
        android:textOn="T"
        style="@style/toggleButton"
        android:textColor="@drawable/daypicker_toggle_text_color"
        android:background="@drawable/daypicker_toggle_bg" />

    <ToggleButton
        android:id="@+id/dp_friday"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="F"
        android:textOn="F"
        style="@style/toggleButton"
        android:textColor="@drawable/daypicker_toggle_text_color"
        android:background="@drawable/daypicker_toggle_bg" />

    <ToggleButton
        android:id="@+id/dp_saturday"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="S"
        android:textOn="S"
        style="@style/toggleButton"
        android:textColor="@drawable/daypicker_toggle_text_color"
        android:background="@drawable/daypicker_toggle_bg" />

    <ToggleButton
        android:id="@+id/dp_sunday"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:textOff="S"
        android:textOn="S"
        style="@style/toggleButton"
        android:textColor="@drawable/daypicker_toggle_text_color"
        android:background="@drawable/daypicker_toggle_bg" />
</LinearLayout>